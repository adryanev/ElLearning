<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RadioGroup
        android:id="@+id/radioGroupPertanyaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:padding="8dp"
                
                android:paddingStart="16dp"
                android:button="@null"
                android:id="@+id/jawabanA"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="A. Jawaban"
                android:background="@drawable/background_radio_button"
                />

            <RadioButton
                android:id="@+id/jawabanB"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"

                android:layout_marginEnd="32dp"
                android:background="@drawable/background_radio_button"
                android:button="@null"
                android:padding="8dp"
                android:paddingStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/jawabanA"
                app:layout_constraintTop_toTopOf="@+id/jawabanA"

                tools:text="B. Jawaban" />

            <RadioButton
                android:id="@+id/jawabanC"
                android:padding="8dp"
                android:button="@null"
                android:paddingStart="16dp"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/jawabanA"
                app:layout_constraintTop_toBottomOf="@+id/jawabanA"
                tools:text="C. Jawaban C"
                android:background="@drawable/background_radio_button"
                />

            <RadioButton
                android:id="@+id/jawabanD"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_radio_button"
                android:button="@null"
                android:padding="8dp"
                android:paddingStart="16dp"
                app:layout_constraintEnd_toEndOf="@+id/jawabanB"
                app:layout_constraintStart_toStartOf="@+id/jawabanB"
                app:layout_constraintTop_toBottomOf="@+id/jawabanB"
                tools:text="D. Jawaban D" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
